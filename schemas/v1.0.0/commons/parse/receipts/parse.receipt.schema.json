{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commons/parse/receipts/parse.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "parse.receipt",
  "description": "Receipt for a parse request, including structured output and any warnings.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x402": {
          "description": "x402 envelope describing the verb and version for this receipt.",
          "allOf": [
            {
              "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "verb": { "const": "parse" },
                "version": { "const": "1.0.0" }
              },
              "required": ["verb", "version"]
            }
          ]
        },
        "result": {
          "description": "Parsing result payload.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "parsed": {
              "description": "Parsed structured output. Schema is intentionally loose to support arbitrary structures.",
              "type": "object",
              "additionalProperties": true
            },
            "schema_hint": {
              "description": "Optional hint describing the shape of parsed data (e.g., name of a JSON Schema, table, or model).",
              "type": "string",
              "maxLength": 256
            },
            "warnings": {
              "description": "Optional list of warnings about partial parses, dropped fields, or coercions.",
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1024
              }
            }
          },
          "required": ["parsed"]
        },
        "usage": {
          "description": "Optional resource usage metrics for this invocation.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "input_tokens": { "type": "integer", "minimum": 0 },
            "output_tokens": { "type": "integer", "minimum": 0 },
            "total_tokens": { "type": "integer", "minimum": 0 },
            "cost": {
              "description": "Optional cost for this call in provider-defined units.",
              "type": "number",
              "minimum": 0
            }
          }
        }
      },
      "required": ["result"]
    }
  ]
}
