{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commons/parse/receipts/parse.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "parse.receipt",
  "description": "Receipt for parse requests, extending the CommandLayer base receipt structure with parsing-specific result and usage fields.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x402": {
          "description": "x402 envelope describing the parse verb and version for this receipt.",
          "allOf": [
            {
              "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "verb": { "const": "parse" },
                "version": { "const": "1.0.0" }
              },
              "required": ["verb", "version"]
            }
          ]
        },
        "result": {
          "description": "Parsing result payload when status = 'success' or 'partial'.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "structured": {
              "description": "Parsed structured representation (e.g., JSON object/array, extracted entities).",
              "type": "object",
              "additionalProperties": true
            },
            "shape": {
              "description": "Effective shape of the structured result.",
              "type": "string",
              "enum": ["object", "array", "kv_pairs", "entities", "table", "other"]
            },
            "schema_uri": {
              "description": "URI of the schema that was used to validate or guide parsing, if any.",
              "type": "string",
              "maxLength": 2048
            },
            "valid": {
              "description": "Whether the parsed result fully conforms to the schema, if provided.",
              "type": "boolean"
            },
            "warnings": {
              "description": "Non-fatal warnings about parsing (e.g., fields dropped, partial matches).",
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1024
              }
            },
            "source_hash": {
              "description": "Optional hash of the input content (e.g., sha256 hex).",
              "type": "string",
              "minLength": 32,
              "maxLength": 128
            }
          },
          "required": ["structured"]
        },
        "usage": {
          "description": "Optional resource usage metrics for this invocation.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "input_tokens": {
              "description": "Number of input tokens consumed.",
              "type": "integer",
              "minimum": 0
            },
            "output_tokens": {
              "description": "Number of output tokens produced.",
              "type": "integer",
              "minimum": 0
            },
            "total_tokens": {
              "description": "Total tokens used (input + output), if available.",
              "type": "integer",
              "minimum": 0
            },
            "cost_usd": {
              "description": "Optional cost for this call in USD (or equivalent fiat), if known.",
              "type": "number",
              "minimum": 0
            },
            "latency_ms": {
              "description": "Observed end-to-end latency for this invocation in milliseconds.",
              "type": "integer",
              "minimum": 0
            }
          }
        }
      },
      "required": ["x402", "trace", "status", "result"]
    }
  ]
}
