{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commons/tag/receipts/tag.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "tag.receipt",
  "description": "Receipt for a tag request, including applied tags and any taxonomy metadata.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x402": {
          "description": "x402 envelope describing the verb and version for this receipt.",
          "allOf": [
            {
              "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "verb": { "const": "tag" },
                "version": { "const": "1.0.0" }
              },
              "required": ["verb", "version"]
            }
          ]
        },
        "result": {
          "description": "Tagging result payload.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "tags": {
              "description": "Tags applied to the content.",
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "label": {
                    "description": "Tag label.",
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 256
                  },
                  "confidence": {
                    "description": "Optional confidence score in [0,1].",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                  },
                  "source": {
                    "description": "Where this tag came from (e.g., model, rule, human).",
                    "type": "string",
                    "maxLength": 64
                  }
                },
                "required": ["label"]
              }
            },
            "taxonomy_version": {
              "description": "Optional taxonomy or label-set version identifier.",
              "type": "string",
              "maxLength": 128
            }
          },
          "required": ["tags"]
        },
        "usage": {
          "description": "Optional resource usage metrics for this invocation.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "input_tokens": { "type": "integer", "minimum": 0 },
            "output_tokens": { "type": "integer", "minimum": 0 },
            "total_tokens": { "type": "integer", "minimum": 0 },
            "cost": {
              "description": "Optional cost for this call in provider-defined units.",
              "type": "number",
              "minimum": 0
            }
          }
        }
      },
      "required": ["result"]
    }
  ]
}
