{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commons/query/receipts/query.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "query.receipt",
  "description": "Receipt for query requests, extending the CommandLayer base receipt structure with tabular/structured result and usage fields.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x402": {
          "description": "x402 envelope describing the query verb and version for this receipt.",
          "allOf": [
            {
              "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "verb": { "const": "query" },
                "version": { "const": "1.0.0" }
              },
              "required": ["verb", "version"]
            }
          ]
        },
        "result": {
          "description": "Query result payload when status = 'success' or 'partial'.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "columns": {
              "description": "Schema for the result columns.",
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "description": "Column name.",
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 256
                  },
                  "type": {
                    "description": "Logical type of the column.",
                    "type": "string",
                    "maxLength": 64
                  }
                },
                "required": ["name"]
              }
            },
            "rows": {
              "description": "Query result rows. Each row is an object keyed by column name.",
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": true
              }
            },
            "row_count": {
              "description": "Number of rows returned (may be less than total due to limits).",
              "type": "integer",
              "minimum": 0
            },
            "truncated": {
              "description": "Whether the result set was truncated due to limits.",
              "type": "boolean"
            },
            "stats": {
              "description": "Execution-level statistics for this query.",
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "execution_ms": {
                  "description": "Time spent executing the query in the engine.",
                  "type": "integer",
                  "minimum": 0
                },
                "scan_bytes": {
                  "description": "Bytes scanned/read by the engine.",
                  "type": "integer",
                  "minimum": 0
                },
                "result_bytes": {
                  "description": "Bytes returned in the result set.",
                  "type": "integer",
                  "minimum": 0
                },
                "engine": {
                  "description": "Name or identifier of the underlying query engine, if applicable.",
                  "type": "string",
                  "maxLength": 256
                }
              }
            },
            "source_uri": {
              "description": "Effective source URI that was queried (after routing/alias resolution).",
              "type": "string",
              "maxLength": 2048
            }
          },
          "required": ["rows"]
        },
        "usage": {
          "description": "Optional resource usage metrics for this invocation.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "input_tokens": {
              "description": "Number of input tokens consumed (if an LLM-based query planner was used).",
              "type": "integer",
              "minimum": 0
            },
            "output_tokens": {
              "description": "Number of output tokens produced (if any text/summary output was generated).",
              "type": "integer",
              "minimum": 0
            },
            "total_tokens": {
              "description": "Total tokens used (input + output), if available.",
              "type": "integer",
              "minimum": 0
            },
            "cost_usd": {
              "description": "Optional cost for this call in USD (or equivalent fiat), if known.",
              "type": "number",
              "minimum": 0
            },
            "latency_ms": {
              "description": "Observed end-to-end latency for this invocation in milliseconds.",
              "type": "integer",
              "minimum": 0
            }
          }
        }
      },
      "required": ["x402", "trace", "status", "result"]
    }
  ]
}
