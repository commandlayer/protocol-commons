{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commons/classify/receipts/classify.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "classify.receipt",
  "description": "Receipt for a classify request, including assigned labels and optional scores or taxonomy.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "x402": {
          "description": "x402 envelope describing the verb and version for this receipt.",
          "allOf": [
            {
              "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json"
            },
            {
              "type": "object",
              "properties": {
                "verb": { "const": "classify" },
                "version": { "const": "1.0.0" }
              },
              "required": ["verb", "version"]
            }
          ]
        },
        "result": {
          "description": "Classification result payload.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "labels": {
              "description": "Labels assigned to the input.",
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 128
              },
              "minItems": 1,
              "maxItems": 128
            },
            "scores": {
              "description": "Optional per-label scores between 0 and 1.",
              "type": "array",
              "items": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "maxItems": 128
            },
            "taxonomy": {
              "description": "Optional taxonomy or hierarchy path used for classification.",
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 256
              },
              "maxItems": 128
            }
          },
          "required": ["labels"]
        },
        "usage": {
          "description": "Optional resource usage metrics for this invocation.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "input_tokens": { "type": "integer", "minimum": 0 },
            "output_tokens": { "type": "integer", "minimum": 0 },
            "total_tokens": { "type": "integer", "minimum": 0 },
            "cost": {
              "description": "Optional cost for this call in provider-defined units.",
              "type": "number",
              "minimum": 0
            }
          }
        }
      },
      "required": ["result"]
    }
  ]
}
