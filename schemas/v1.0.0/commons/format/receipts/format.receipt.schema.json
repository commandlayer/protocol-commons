{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commons/format/receipts/format.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "format.receipt",
  "description": "Receipt for a format request, including the formatted output and format metadata.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x402": {
          "description": "x402 envelope describing the verb and version for this receipt.",
          "allOf": [
            {
              "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "verb": { "const": "format" },
                "version": { "const": "1.0.0" }
              },
              "required": ["verb", "version"]
            }
          ]
        },
        "result": {
          "description": "Formatting result payload.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "output": {
              "description": "The formatted content.",
              "type": "string",
              "minLength": 1
            },
            "input_format": {
              "description": "Format of the input content.",
              "type": "string",
              "maxLength": 64
            },
            "output_format": {
              "description": "Format of the output content.",
              "type": "string",
              "maxLength": 64
            },
            "changed": {
              "description": "Whether the formatter materially changed the content.",
              "type": "boolean"
            }
          },
          "required": ["output"]
        },
        "usage": {
          "description": "Optional resource usage metrics for this invocation.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "input_tokens": { "type": "integer", "minimum": 0 },
            "output_tokens": { "type": "integer", "minimum": 0 },
            "total_tokens": { "type": "integer", "minimum": 0 },
            "cost": {
              "description": "Optional cost for this call in provider-defined units.",
              "type": "number",
              "minimum": 0
            }
          }
        }
      },
      "required": ["result"]
    }
  ]
}
