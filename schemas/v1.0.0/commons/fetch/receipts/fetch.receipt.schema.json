{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commons/fetch/receipts/fetch.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "fetch.receipt",
  "description": "Receipt for fetch requests, extending the CommandLayer base receipt structure with fetch-specific result and usage fields.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x402": {
          "description": "x402 envelope describing the fetch verb and version for this receipt.",
          "allOf": [
            {
              "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "verb": { "const": "fetch" },
                "version": { "const": "1.0.0" }
              },
              "required": ["verb", "version"]
            }
          ]
        },
        "result": {
          "description": "Fetch result payload when status = 'success' or 'partial'.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "responses": {
              "description": "Per-target fetch responses.",
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "target": {
                    "description": "Original target URI or identifier.",
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 2048
                  },
                  "resolved_url": {
                    "description": "Final resolved URL after redirects, if applicable.",
                    "type": "string",
                    "maxLength": 2048
                  },
                  "status_code": {
                    "description": "HTTP-style status code, if applicable.",
                    "type": "integer",
                    "minimum": 100,
                    "maximum": 599
                  },
                  "ok": {
                    "description": "Whether the fetch was considered logically successful for this target.",
                    "type": "boolean"
                  },
                  "content_type": {
                    "description": "Content type of the response (e.g., application/json, text/html).",
                    "type": "string",
                    "maxLength": 256
                  },
                  "headers": {
                    "description": "Response headers for HTTP(S) targets.",
                    "type": "object",
                    "additionalProperties": {
                      "type": "string",
                      "maxLength": 1024
                    }
                  },
                  "body": {
                    "description": "Response body as a string (raw, decoded, or truncated).",
                    "type": "string"
                  },
                  "body_truncated": {
                    "description": "Whether the body was truncated due to size limits.",
                    "type": "boolean"
                  },
                  "redirect_chain": {
                    "description": "Sequence of intermediate URLs encountered when following redirects.",
                    "type": "array",
                    "items": {
                      "type": "string",
                      "maxLength": 2048
                    }
                  },
                  "error": {
                    "description": "Error details for this specific target, if any.",
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "code": {
                        "description": "Target-specific error code.",
                        "type": "string",
                        "maxLength": 64
                      },
                      "message": {
                        "description": "Human-readable error message.",
                        "type": "string",
                        "maxLength": 2048
                      },
                      "retryable": {
                        "description": "Whether this specific target fetch may be retried.",
                        "type": "boolean"
                      }
                    }
                  }
                },
                "required": ["target"]
              },
              "minItems": 1
            },
            "decode": {
              "description": "Effective decode strategy used (e.g., auto, text, json, binary).",
              "type": "string",
              "enum": ["auto", "text", "json", "binary"]
            }
          },
          "required": ["responses"]
        },
        "usage": {
          "description": "Optional resource usage metrics for this invocation.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "bytes_sent": {
              "description": "Total bytes sent across all targets.",
              "type": "integer",
              "minimum": 0
            },
            "bytes_received": {
              "description": "Total bytes received across all targets (after truncation, if any).",
              "type": "integer",
              "minimum": 0
            },
            "targets_succeeded": {
              "description": "Number of targets that succeeded logically.",
              "type": "integer",
              "minimum": 0
            },
            "targets_failed": {
              "description": "Number of targets that failed logically.",
              "type": "integer",
              "minimum": 0
            },
            "cost_usd": {
              "description": "Optional cost for this call in USD (or equivalent fiat), if known.",
              "type": "number",
              "minimum": 0
            },
            "latency_ms": {
              "description": "Observed end-to-end latency for this invocation in milliseconds.",
              "type": "integer",
              "minimum": 0
            }
          }
        }
      },
      "required": ["x402", "trace", "status", "result"]
    }
  ]
}
