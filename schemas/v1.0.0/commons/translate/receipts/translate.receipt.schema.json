{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commons/translate/receipts/translate.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "translate.receipt",
  "description": "Receipt for a translate request, including translated text and language metadata.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x402": {
          "description": "x402 envelope describing the verb and version for this receipt.",
          "allOf": [
            {
              "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "verb": { "const": "translate" },
                "version": { "const": "1.0.0" }
              },
              "required": ["verb", "version"]
            }
          ]
        },
        "result": {
          "description": "Translation result payload.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "translated_text": {
              "description": "The translated text.",
              "type": "string",
              "minLength": 1
            },
            "source_locale": {
              "description": "IETF BCP 47 language tag for the source text.",
              "type": "string",
              "minLength": 2,
              "maxLength": 32
            },
            "target_locale": {
              "description": "IETF BCP 47 language tag for the translated text.",
              "type": "string",
              "minLength": 2,
              "maxLength": 32
            },
            "model_name": {
              "description": "Optional provider/model identifier used for translation.",
              "type": "string",
              "maxLength": 256
            }
          },
          "required": ["translated_text"]
        },
        "usage": {
          "description": "Optional resource usage metrics for this invocation.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "input_tokens": { "type": "integer", "minimum": 0 },
            "output_tokens": { "type": "integer", "minimum": 0 },
            "total_tokens": { "type": "integer", "minimum": 0 },
            "cost": {
              "description": "Optional cost for this call in provider-defined units.",
              "type": "number",
              "minimum": 0
            }
          }
        }
      },
      "required": ["result"]
    }
  ]
}
