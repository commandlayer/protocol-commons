{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commons/describe/receipts/describe.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "describe.receipt",
  "description": "Receipt for describe requests, extending the CommandLayer base receipt structure with description-specific result and usage fields.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x402": {
          "description": "x402 envelope describing the describe verb and version for this receipt.",
          "allOf": [
            { "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json" },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "verb": { "const": "describe" },
                "version": { "const": "1.0.0" }
              },
              "required": ["verb", "version"]
            }
          ]
        },
        "result": {
          "description": "Description result payload when status = 'ok' or 'partial'.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "description": {
              "description": "The generated description of the subject.",
              "type": "string",
              "minLength": 1,
              "maxLength": 500000
            },
            "format": {
              "description": "Format of the description.",
              "type": "string",
              "enum": ["text", "markdown", "html", "json", "other"]
            },
            "audience": {
              "description": "Effective audience the agent targeted.",
              "type": "string",
              "maxLength": 64
            },
            "depth": {
              "description": "Depth actually applied.",
              "type": "string",
              "enum": ["overview", "detailed", "deep_dive"]
            },
            "source_uri": {
              "description": "Primary source URI used to ground the description, if any.",
              "type": "string",
              "maxLength": 2048
            },
            "source_hash": {
              "description": "Optional hash of the input content used (e.g., sha256 hex).",
              "type": "string",
              "minLength": 32,
              "maxLength": 128
            },
            "warnings": {
              "description": "Non-fatal warnings (e.g., incomplete docs, conflicting sources).",
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1024
              }
            },
            "model_name": {
              "description": "Identifier for the model or engine used, if applicable.",
              "type": "string",
              "maxLength": 256
            }
          },
          "required": ["description"]
        },
        "usage": {
          "description": "Optional resource usage metrics for this invocation.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "input_tokens": {
              "description": "Number of input tokens consumed.",
              "type": "integer",
              "minimum": 0
            },
            "output_tokens": {
              "description": "Number of output tokens produced.",
              "type": "integer",
              "minimum": 0
            },
            "total_tokens": {
              "description": "Total tokens used (input + output), if available.",
              "type": "integer",
              "minimum": 0
            },
            "cost_usd": {
              "description": "Optional cost for this call in USD (or equivalent fiat), if known.",
              "type": "number",
              "minimum": 0
            },
            "latency_ms": {
              "description": "Observed end-to-end latency for this invocation in milliseconds.",
              "type": "integer",
              "minimum": 0
            }
          }
        }
      },
      "required": ["x402", "trace", "status", "result"]
    }
  ]
}
