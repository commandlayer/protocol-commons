{
  "$id": "https://commandlayer.org/schemas/v1.0.0/commons/describe/receipts/describe.receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "describe.receipt",
  "description": "Receipt for a describe request, providing a structured description payload.",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/receipt.base.schema.json"
    },
    {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x402": {
          "description": "x402 envelope describing the verb and version for this receipt.",
          "allOf": [
            {
              "$ref": "https://commandlayer.org/schemas/v1.0.0/_shared/x402.schema.json"
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "verb": { "const": "describe" },
                "version": { "const": "1.0.0" }
              },
              "required": ["verb", "version"]
            }
          ]
        },
        "result": {
          "description": "Description result payload.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "description": {
              "description": "The main description text.",
              "type": "string",
              "minLength": 1
            },
            "format": {
              "description": "Format of the description content.",
              "type": "string",
              "enum": ["text", "markdown", "html", "json", "other"]
            },
            "highlights": {
              "description": "Optional list of key points or attributes extracted from the subject.",
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 512
              }
            }
          },
          "required": ["description"]
        },
        "usage": {
          "description": "Optional resource usage metrics for this invocation.",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "input_tokens": { "type": "integer", "minimum": 0 },
            "output_tokens": { "type": "integer", "minimum": 0 },
            "total_tokens": { "type": "integer", "minimum": 0 },
            "cost": {
              "description": "Optional cost for this call in provider-defined units.",
              "type": "number",
              "minimum": 0
            }
          }
        }
      },
      "required": ["result"]
    }
  ]
}
